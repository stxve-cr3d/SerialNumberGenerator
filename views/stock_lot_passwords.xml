<odoo>
    <record id="view_stock_lot_form_inherit_passwords" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.passwords</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Passwords">
                    <group>
                        <field name="password_pi" readonly="1"/>
                        <field name="password_admin" readonly="1"/>
                        <field name="password_maintainer" readonly="1"/>
                        <field name="password_user" readonly="1"/>
                        <field name="password_touch_maintainer" readonly="1"/>
                        <field name="password_useradmin" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>